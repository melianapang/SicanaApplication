<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".onboarding.registration.authentication.VerifyOtpModalFragment">

    <TextView
        android:id="@+id/tv_title_otp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinssemibold"
        android:gravity="center"
        android:text="@string/title_otp"
        android:textAlignment="center"
        android:textColor="@color/blue_font"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_subtitle_otp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/poppinsregular"
        android:text="@string/subtitle_otp"
        android:textAlignment="center"
        android:textColor="@color/light_blue_subtitle_font"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/edit_input_code_1"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/blue_buttons"
        android:textSize="24sp"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle_otp"
        app:layout_constraintStart_toStartOf="@+id/tv_subtitle_otp"/>

    <EditText
        android:id="@+id/edit_input_code_2"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/blue_buttons"
        android:textSize="24sp"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle_otp"
        app:layout_constraintStart_toEndOf="@+id/edit_input_code_1"/>

    <EditText
        android:id="@+id/edit_input_code_3"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/blue_buttons"
        android:textSize="24sp"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle_otp"
        app:layout_constraintStart_toEndOf="@+id/edit_input_code_2"/>

    <EditText
        android:id="@+id/edit_input_code_4"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/blue_buttons"
        android:textSize="24sp"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle_otp"
        app:layout_constraintStart_toEndOf="@+id/edit_input_code_3"/>

    <EditText
        android:id="@+id/edit_input_code_5"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/blue_buttons"
        android:textSize="24sp"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle_otp"
        app:layout_constraintStart_toEndOf="@+id/edit_input_code_4"/>

    <EditText
        android:id="@+id/edit_input_code_6"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/blue_buttons"
        android:textSize="24sp"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle_otp"
        app:layout_constraintStart_toEndOf="@+id/edit_input_code_5"/>

    <TextView
        android:id="@+id/tv_title_resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppinsregular"
        android:text="@string/ask_resend_string"
        android:textColor="@color/blue_buttons"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/edit_input_code_1"
        app:layout_constraintTop_toBottomOf="@id/edit_input_code_1" />

    <TextView
        android:id="@+id/tv_btn_resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="@string/resend_string"
        android:textColor="@color/dark_blue_font"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/tv_title_resend"
        app:layout_constraintTop_toBottomOf="@id/edit_input_code_6" />

    <com.example.capstoneproject.utils.customButtons.BlueButtons
        android:id="@+id/btn_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_btn_resend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/verify_string"
        android:textColor="@color/white" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/tv_btn_resend"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_made_by"
        app:layout_constraintEnd_toEndOf="@id/btn_next"
        app:layout_constraintStart_toStartOf="@id/btn_next"
        app:layout_constraintTop_toBottomOf="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppinsregular"
        android:text="@string/made_by"
        android:textColor="@color/blue_font"
        android:textSize="12sp" />

</androidx.constraintlayout.widget.ConstraintLayout>